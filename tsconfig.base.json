{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "@legal/types/src/express.d.ts",
        ],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@legal/logger": [
                "libs/logger/src/index.ts"
            ],
            "@legal/shared-utils": [
                "libs/shared-utils/src/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/__tests__/**"
    ]
}