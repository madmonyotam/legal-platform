generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model UserMeta {
    uid       String   @id
    role      Role
    officeId  String
    invitedBy String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Role {
    owner
    lawyer
    intern
    admin
}
