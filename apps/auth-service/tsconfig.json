{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",                       
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,                   
    "resolveJsonModule": true,                
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
